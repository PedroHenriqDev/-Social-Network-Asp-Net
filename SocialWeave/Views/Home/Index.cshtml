@using SocialWeave.Extensions
@using SocialWeave.Models.ConcreteClasses

@model IEnumerable<SocialWeave.Models.AbstractClasses.Post>

@if (User.Identity.IsAuthenticated)
{
    <div class="container text-center">
        @if (Model != null)
        {
            @foreach (var post in Model)
            {
                <div class="post">
                    @if (post.User.PictureProfile == null)
                    {
                        <div class="post-header text-xxl-start">
                            <h5><i class="bi bi-person-circle mx-2"></i>@post.User.Name.CutName()</h5>
                        </div>
                    }
                    <div class="post-content text-xxl-start">
                        <p>@post.Description.CutDescription()</p>
                    </div>
                    <div class="post-header text-xxl-start">
                        </div>
                        <div class="text-xxl-start">
                        @if (post.Likes != null && post.Likes.Any(l => l.User.Name == User.Identity.Name))
                        {
                            <form method="post" asp-action="Dislike" asp-route-id="@post.Id" asp-controller="Post">
                                <button type="submit" class="btn btn-link"><i class="bi bi-heart-fill text-danger"></i></button>
                                <p>@Model.Count()</p>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-action="Like" asp-route-id="@post.Id" asp-controller="Post">
                                <button type="submit" class="btn btn-link"><i class="bi bi-heart text-danger"></i></button>
                                <p>@Model.Count()</p>
                            </form>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center">
                <h4><strong>No new posts</strong></h4>
                <a asp-action="Index" asp-controller="Home"><i class="bi bi-arrow-clockwise"></i></a>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <h4><strong>Login to access Social Weave</strong></h4>
        <a class="nav-link" style="font-size: 18px; margin-right: 15px;" asp-area="" asp-controller="User" asp-action="Login"><i class="bi bi-box-arrow-in-right mx-2"></i>Login</a>
    </div>
}

<style>
    .container {
        margin-top: 100px;
        max-width: 600px; 
    }

    .post {
        border-radius: 10px;
        background: linear-gradient(135deg, #6a0dad, #0000);
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        padding: 20px;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .post-header {
        border-bottom: 1px solid #fff;
        margin-bottom: 10px;
        padding-bottom: 10px;
    }

        .post-header h3 {
            margin-top: 0;
            color: #fff; 
        }

    .post-content p {
        margin-bottom: 0;
        color: #fff; 
    }
</style>
