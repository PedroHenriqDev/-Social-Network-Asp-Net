@model SocialWeave.Models.ViewModels.ForgotPasswordViewModel

<form method="post" asp-controller="User" asp-action="ForgotPassword">
    <div class="container">
        <main role="main" class="pb-3">
            <div class="login-container">
                <h2>Forgot Password</h2>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email: </label>
                    <input type="email" class="form-control" asp-for="Email" id="Email" placeholder="Enter your email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <button type="submit" class="btn btn-primary w-50">Send Reset Email</button>
                <hr>
                <a class="" asp-controller="User" asp-action="Login">Back to Login</a>
            </div>
        </main>
    </div>
</form>
